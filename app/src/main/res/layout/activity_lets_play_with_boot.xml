<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround_Color"
    tools:context=".LetsPlayWithBoot">

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/backGround_Color"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/newGameButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:background="@color/backGround_Color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/new_game"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/MainWindoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/player_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menuButton"
        android:layout_alignParentStart="true"
        android:fontFamily="monospace"
        android:text="You"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/player2s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player1Name"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Boot"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintVertical_bias="0.82" />

    <TextView
        android:id="@+id/drawName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player2Name"
        android:layout_alignBottom="@+id/player2Name"
        android:layout_alignEnd="@+id/value_Showing"
        android:fontFamily="monospace"
        android:text="Draw"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.829"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/player1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MainWindoInfo"
        android:layout_below="@+id/player2Name"
        android:text="0"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.87"
        app:layout_constraintHorizontal_bias="0.12"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/drawScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player2Name"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/player2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/drawName"
        android:layout_below="@+id/drawName"
        android:text="0"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/firstBox"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/secondBox"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/fouthBox"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/secondBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/secondBox"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/value_Showing"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/fithBox"
        app:layout_constraintLeft_toRightOf="@+id/firstBox"
        app:layout_constraintRight_toLeftOf="@+id/thirdBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/thirdBox"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/secondBox"
        android:layout_alignBottom="@+id/secondBox"
        android:layout_alignEnd="@+id/value_Showing"
        android:layout_alignRight="@+id/value_Showing"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/sixthBox"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fouthBox"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/seventhBox"
        android:layout_alignStart="@+id/seventhBox"
        android:layout_below="@+id/secondBox"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/seventhBox"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fithBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fithBox"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/fouthBox"
        android:layout_alignBottom="@+id/fouthBox"
        android:layout_alignLeft="@+id/eigthBox"
        android:layout_alignStart="@+id/eigthBox"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/eigthBox"
        app:layout_constraintLeft_toRightOf="@+id/fouthBox"
        app:layout_constraintRight_toLeftOf="@+id/sixthBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sixthBox"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/fouthBox"
        android:layout_alignBottom="@+id/fouthBox"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/ninthBox"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/seventhBox"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/eigthBox"
        android:layout_alignBottom="@+id/eigthBox"
        android:layout_alignEnd="@+id/menuButton"
        android:layout_alignRight="@+id/menuButton"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/eigthBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <TextView
        android:id="@+id/eigthBox"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/ninthBox"
        android:layout_alignBottom="@+id/ninthBox"
        android:layout_alignLeft="@+id/secondBox"
        android:layout_alignStart="@+id/secondBox"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/seventhBox"
        app:layout_constraintRight_toLeftOf="@+id/ninthBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <TextView
        android:id="@+id/ninthBox"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_above="@+id/drawName"
        android:layout_alignLeft="@+id/drawName"
        android:layout_alignStart="@+id/drawName"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <com.sudoajay.tic_tac_toe.DesginOfLetsPlayClass
        android:id="@+id/desginOfLetsPlayClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
